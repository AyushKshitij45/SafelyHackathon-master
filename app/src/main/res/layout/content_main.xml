<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.myapplication.MainActivity"
    android:background="#E0E0E0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#ffffff">
            <android.support.v7.widget.CardView
                android:id="@+id/myHealth"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="28dp"
                android:backgroundTint="#651FFF"
                android:gravity="center"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="My Health"
                    android:textColor="#ffffff"
                    android:textSize="24dp" />

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_below="@id/t"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="5dp"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_marginBottom="136dp"
            android:layout_height="match_parent"
            android:background="#ffffff"


            >

            <android.support.v7.widget.CardView
                android:id="@+id/start_emergency"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:elevation="10dp"

                card_view:cardCornerRadius="140dp"
                android:gravity="center"

                android:background="@drawable/c_main"
                android:layout_gravity="center"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Start Emergency"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:background="@drawable/c_main"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/fab_add"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="#6200EA"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="108dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="32dp"
        android:padding="20dp"
        app:cardElevation="10dp"
        >
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/baseline_add_location_white_48dp"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>

