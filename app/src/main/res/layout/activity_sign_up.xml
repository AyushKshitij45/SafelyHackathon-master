<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.example.admin.myapplication.SignUpActivity">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_centerInParent="true"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:paddingHorizontal="16dp"

        >
        <TextView
            android:id="@+id/nameHead"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingLeft="8dp"

            android:textColor="#424242"/>
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColorHighlight="#0277BD"
            android:maxLines="1"
            android:hint="eg: Tony"/>


        <TextView
            android:id="@+id/mailHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="#424242"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="eg: abc@gmail.com"
            android:maxLines="1"
            android:inputType="textEmailAddress"

            android:textColorHighlight="#0277BD"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="#424242"
            />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:spinnerMode="dropdown"
            android:backgroundTint="#0277BD"
            android:textAlignment="center"
            >

        </Spinner>

        <TextView
            android:id="@+id/bloodHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:textColor="#424242"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:spinnerMode="dropdown"
            android:backgroundTint="#0277BD"
            android:foregroundTint="#0277BD"
            android:textAlignment="center"
            />
        <android.support.v7.widget.CardView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="22dp"
            android:textAllCaps="false"
            app:cardBackgroundColor="#ff0000"

            android:layout_margin="8dp"
            android:textColor="#FFFFFF"
            >
            <TextView
                android:onClick="onClickSelectContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Emergency Contact"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:paddingVertical="15dp"
                />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="22dp"
            android:textAllCaps="false"
            app:cardBackgroundColor="@color/colorPrimary"
            android:onClick="onClickSelectContact"
            android:layout_margin="10dp"
            android:textColor="#FFFFFF"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Next"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:paddingVertical="15dp"
                />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>
